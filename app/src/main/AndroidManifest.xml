<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Mahina"
        tools:targetApi="31">
        <activity
            android:name=".activities.doctorActivities.DoctorOptions"
            android:exported="false"
            android:label="@string/title_activity_doctor_options"
            android:theme="@style/Base.Theme.Mahina" />
        <activity
            android:name=".activities.motherActivities.MotherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.doctorActivities.DoctorActivity"
            android:exported="false"
            android:label="@string/title_activity_doctor" />

        <activity
            android:name=".activities.patientActivities.PatientActivity"
            android:exported="false"
            android:label="PatientActivity"/>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="default" />

        <receiver android:name=".Notifications.NotificationScheduler" />

        <activity
            android:name=".activities.DoctorAppointment"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UltraSound">

            <!-- SecondActivity configuration -->
        </activity>
    </application>

</manifest>