                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_marginBottom="16sp"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardBackgroundColor="#33CC76A1"
                    app:cardCornerRadius="20sp"
                    app:cardMaxElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp">

                        <TextView
                            android:id="@+id/USG4Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="16sp"
                            android:layout_marginEnd="16sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="@font/lexend"
                            android:text="USG 4: Growth Scan"
                            android:textColor="@color/blue"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/LMPDescriptionUSG4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/USG4Title"
                            android:layout_marginStart="22sp"
                            android:fontFamily="@font/lexend"
                            android:text="18-20 Weeks + 6 days from LMP "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/usg4DatesFromLMP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/LMPDescriptionUSG4"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/lexend"
                            android:text="@string/dateSelect"
                            android:textColor="@color/grey"
                            android:textSize="20sp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
