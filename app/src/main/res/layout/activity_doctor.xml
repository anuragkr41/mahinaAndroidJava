                            android:fontFamily="@font/lexend"
                            android:text="11-13 Weeks + 6 days from LMP "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/visit2DatesFromLMP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/LMPDescriptionVisit2"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/lexend"
                            android:text="@string/dateSelect"
                            android:textColor="@color/grey"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/visit3Dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/visit2Dates"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_marginBottom="16sp"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardBackgroundColor="#1A120A8F"
                    app:cardCornerRadius="20sp"
                    app:cardMaxElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp">

                        <TextView
                            android:id="@+id/visit3Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
