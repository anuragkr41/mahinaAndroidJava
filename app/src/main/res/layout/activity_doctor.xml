                    app:cardCornerRadius="20sp"
                    app:cardMaxElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp">

                        <TextView
