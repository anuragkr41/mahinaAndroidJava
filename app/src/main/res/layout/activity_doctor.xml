                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="16sp"
                            android:layout_marginEnd="16sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="@font/lexend"
                            android:text="USG 3: Anomaly Scan"
                            android:textColor="@color/blue"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/LMPDescriptionUSG3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/USG3Title"
                            android:layout_marginStart="22sp"
                            android:fontFamily="@font/lexend"
                            android:text="18-20 Weeks + 6 days from LMP "
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/usg3DatesFromLMP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/LMPDescriptionUSG3"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/lexend"
                            android:text="@string/dateSelect"
                            android:textColor="@color/grey"
                            android:textSize="20sp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/usg4Dates"
