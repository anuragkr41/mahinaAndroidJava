                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/visit1DatesFromLMP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/LMPDescriptionVisit1"
